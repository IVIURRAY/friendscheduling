{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && chmod +x ./gradlew && ./gradlew clean build -x test --no-daemon"
  },
  "deploy": {
    "startCommand": "cd backend && java -Dserver.port=$PORT -jar build/libs/demo-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}